# Enterprise Transit Network Configuration
# Defines 7 VPCs and subnets for a secure multi-tier architecture

enable_ncc   = true
ncc_hub_name = "enterprise-transit-hub"

networks = {
  "trust" = {
    network_name = "trust-vpc"
    subnets = [{
      subnet_name   = "trust-subnet"
      subnet_ip     = "10.0.0.0/24"
      subnet_region = "asia-south1"
    }]
  }
  "web-a" = {
    network_name = "web-a-vpc"
    subnets = [{
      subnet_name   = "web-a-subnet"
      subnet_ip     = "10.1.0.0/24"
      subnet_region = "asia-south1"
    }]
  }
  "app-a" = {
    network_name = "app-a-vpc"
    subnets = [{
      subnet_name   = "app-a-subnet"
      subnet_ip     = "10.2.0.0/24"
      subnet_region = "asia-south1"
    }]
  }
  "db-a" = {
    network_name = "db-a-vpc"
    subnets = [{
      subnet_name   = "db-a-subnet"
      subnet_ip     = "10.3.0.0/24"
      subnet_region = "asia-south1"
    }]
  }
  "web-b" = {
    network_name = "web-b-vpc"
    subnets = [{
      subnet_name   = "web-b-subnet"
      subnet_ip     = "10.4.0.0/24"
      subnet_region = "asia-south1"
    }]
  }
  "app-b" = {
    network_name = "app-b-vpc"
    subnets = [{
      subnet_name   = "app-b-subnet"
      subnet_ip     = "10.5.0.0/24"
      subnet_region = "asia-south1"
    }]
  }
  "db-b" = {
    network_name = "db-b-vpc"
    subnets = [{
      subnet_name   = "db-b-subnet"
      subnet_ip     = "10.6.0.0/24"
      subnet_region = "asia-south1"
    }]
  }

  # --- Non-NCC VPCs (Isolated) ---
  "sandbox-a" = {
    network_name     = "sandbox-a-vpc"
    exclude_from_ncc = true
    subnets = [{
      subnet_name   = "sandbox-a-subnet"
      subnet_ip     = "10.10.0.0/24"
      subnet_region = "asia-south1"
    }]
  }

  "sandbox-b" = {
    network_name     = "sandbox-b-vpc"
    exclude_from_ncc = true
    subnets = [{
      subnet_name   = "sandbox-b-subnet"
      subnet_ip     = "10.11.0.0/24"
      subnet_region = "asia-south1"
    }]
  }
}
